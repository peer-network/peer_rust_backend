{
    "name": "peer-solana-client",
    "version": "1.0.0",
    "description": "Solana API Integration with PHP Backend",
    "scripts": {
        "generate-server": "graphql-codegen --config ./infrastructure/gql/codegen-config/codegen-server.yml",
        "generate-client": "graphql-codegen --config ./infrastructure/gql/codegen-config/codegen-client.ts",
        "start": "ts-node app/api/server/server.ts",
        "listener": "ts-node app/listener/index.ts",
        "build": "tsc",
        "lint:fix": "prettier */*.js \"*/**/*{.js,.ts}\" -w",
        "lint": "eslint . --ext .ts",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "test:fetch": "ts-node app/test-fetch.ts",
        "test:ci": "jest --ci --coverage --runInBand",
        "test:anchor": "anchor test"
    },
    "dependencies": {
        "@apollo/client": "^3.13.8",
        "@coral-xyz/anchor": "^0.29.0",
        "@graphql-codegen/client-preset": "^4.8.0",
        "@graphql-codegen/typescript-resolvers": "^4.5.0",
        "@project-serum/anchor": "^0.26.0",
        "@solana/web3.js": "^1.98.0",
        "@types/dotenv": "^6.1.1",
        "apollo-server": "^3.13.0",
        "axios": "^1.8.4",
        "cross-fetch": "^4.1.0",
        "dotenv": "^16.4.7",
        "express": "^5.1.0",
        "express-graphql": "^0.12.0",
        "graphql": "^16.10.0",
        "graphql-request": "^6.1.0",
        "graphql-tools": "^9.0.18",
        "jwt-decode": "^4.0.0",
        "reaact": "^0.0.1-security",
        "react": "^19.1.0",
        "rehackt": "^0.1.0",
        "winston": "^3.11.0",
        "ws": "^8.18.1"
    },
    "devDependencies": {
        "@graphql-codegen/add": "^5.0.3",
        "@graphql-codegen/cli": "^5.0.5",
        "@graphql-codegen/typescript": "^4.1.6",
        "@graphql-codegen/typescript-generic-sdk": "^4.0.1",
        "@graphql-codegen/typescript-operations": "^4.6.0",
        "@types/bn.js": "^5.1.0",
        "@types/chai": "^4.3.0",
        "@types/express": "^4.17.21",
        "@types/jest": "^29.5.14",
        "@types/mocha": "^9.0.0",
        "@types/node": "^20.10.5",
        "@types/ws": "^8.5.10",
        "@typescript-eslint/eslint-plugin": "^6.15.0",
        "@typescript-eslint/parser": "^6.15.0",
        "chai": "^4.3.4",
        "eslint": "^8.56.0",
        "jest": "^29.7.0",
        "mocha": "^9.0.3",
        "prettier": "^2.6.2",
        "ts-jest": "^29.3.1",
        "ts-mocha": "^10.0.0",
        "ts-node": "^10.9.2",
        "typescript": "^5.7.2",
        "vite": "^6.0.5"
    }
}
